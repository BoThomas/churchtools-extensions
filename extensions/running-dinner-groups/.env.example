# =============================================================================
# Development settings - Copy this to .env.development.local and fill in values
# .env.development.local is gitignored and ONLY loaded during `pnpm dev`
# =============================================================================

VITE_API_BASE_URL=/
VITE_EXTERNAL_API_URL=https://xyz.church.tools/
VITE_USERNAME=churchtools
VITE_PASSWORD=churchtools
VITE_PORT=5174

# Email sending mode:
# - 'console' (default in development): logs emails to console
# - 'churchtools' (default in production): sends emails via ChurchTools API
VITE_EMAIL_MODE=console
